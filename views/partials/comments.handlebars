<div class="container">
  <div class="comments">
    {{#each this}}
    <div class="card m-2">
      <div class="card-body">
        <blockquote class="blockquote mb-0">
          <section class="comment"></section>
          <div class="blockquote-footer m-3">
            {{user.username}} on {{format_date created_at}}
          </div>
          <div class="text">
            {{comment_text}}
          </div>
          </section>
        </blockquote>
      </div>
    </div>
    {{/each}}
  </div>
</div>